<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/text_or_icons"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name:" />

        <EditText
            android:id="@+id/first_name_et"
            style="@style/EditTvStyle"
            android:hint="first name is..." />

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name:" />

        <EditText
            android:id="@+id/last_name_et"
            style="@style/EditTvStyle"
            android:hint="last name is..."
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where did you meet?" />

        <EditText
            android:id="@+id/meet_venue_et"
            style="@style/EditTvStyle"
            android:hint="we met at..." />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anything significant about his/her looks?" />

        <EditText
            android:id="@+id/appearance_et"
            style="@style/EditTvStyle"
            android:hint="his/her look is..." />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's special about him/her?" />

        <EditText
            android:id="@+id/feature_et"
            style="@style/EditTvStyle"
            android:hint="he/she really impressed me because..." />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common friends" />

        <EditText
            android:id="@+id/common_friends_et"
            style="@style/EditTvStyle"
            android:hint="our common friend is..." />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More description" />

        <EditText
            android:id="@+id/description_et"
            style="@style/EditTvStyle"
            android:hint="more description..." />
    </LinearLayout>
</LinearLayout>