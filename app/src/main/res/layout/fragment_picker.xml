<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/change_photo_tv"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Change Photo" />

    <TextView
        android:id="@+id/pickImage_tv"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_photo_tv"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:text="Pick a photo" />

    <TextView
        android:id="@+id/takeImage_tv"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickImage_tv"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:text="Take a photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/takeImage_tv"
        android:text="Cancel" />
</RelativeLayout>
