<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="?colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/CollapsedToolbarTitle"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="@dimen/margin_16dp"
            app:expandedTitleMarginEnd="@dimen/margin_16dp"
            app:expandedTitleMarginStart="@dimen/margin_16dp"
            app:expandedTitleTextAppearance="@style/ExpandedToolbarTitle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/portrait_iv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_picture"
                app:layout_collapseMode="parallax" />

            <!-- Background protection for the Toolbar -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrim" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_1"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:elevation="@dimen/margin_4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:fillViewport="true"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_or_icons"
            android:orientation="vertical"
            android:padding="@dimen/margin_12dp"
            android:transitionGroup="true">

            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Where did you meet?" />

                <TextView
                    android:id="@+id/meet_venue_tv"
                    style="@style/DescriptionTvStyle"
                    android:text="On Facebook" />

                <include layout="@layout/divider_view" />
            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anything significant about his/her looks?" />

                <TextView
                    android:id="@+id/appearance_tv"
                    style="@style/DescriptionTvStyle"
                    android:text="He's very tall, like a beast" />

                <include layout="@layout/divider_view" />
            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's special about him/her?" />

                <TextView
                    android:id="@+id/feature_tv"
                    style="@style/DescriptionTvStyle"
                    android:text="He made the WeChat app." />

                <include layout="@layout/divider_view" />
            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common friends" />

                <TextView
                    android:id="@+id/common_friends_tv"
                    style="@style/DescriptionTvStyle"
                    android:text="John Miller, Chris Harold" />

                <include layout="@layout/divider_view" />
            </LinearLayout>

            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More description" />

                <TextView
                    android:id="@+id/description_tv"
                    style="@style/DescriptionTvStyle"
                    android:text="Not at the moment" />

                <include layout="@layout/divider_view" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:onClick="launchEditActivity"
        android:src="@drawable/ic_edit" />
</android.support.design.widget.CoordinatorLayout>
